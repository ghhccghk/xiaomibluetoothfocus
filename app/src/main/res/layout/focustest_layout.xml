<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bt_status"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:orientation="vertical"
    android:padding="14dp"
    tools:ignore="TextSizeCheck">

    <!-- 蓝牙耳机名称 + 连接状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:text="设备名称：--"
            android:textAlignment="viewStart"
            android:textColor="@color/titleColor"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/imagelogo"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/disconnect"
            android:minWidth="28dp"
            android:minHeight="28dp"
            android:scaleType="centerInside"
            android:src="@drawable/lycaon_icon"
            android:visibility="visible"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>

    <!-- 左右耳 + 盒子电量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="@string/left"
            android:textColor="@color/titleColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/left_battery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text=": 100%"
            android:textAlignment="viewStart"
            android:textColor="@color/titleColor"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:text="@string/right"
            android:textColor="@color/titleColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/right_battery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text=": 100%"
            android:textAlignment="viewStart"
            android:textColor="@color/titleColor"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:text="@string/casebattery"
            android:textColor="@color/titleColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/case_battery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text=": 100%"
            android:textAlignment="viewStart"
            android:textColor="@color/titleColor"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- 断开按钮 -->
    <include layout="@layout/button" />


</LinearLayout>
