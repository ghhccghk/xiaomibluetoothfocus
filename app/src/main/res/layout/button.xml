<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/focus_container_module_button_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="1dp"
    android:layout_alignParentEnd="true">
    <FrameLayout
        android:id="@+id/line"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/focus_notify_line_height"
        android:layout_marginEnd="1dp" />
    <include
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        layout="@layout/focus_notification_module_mark_4" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_hint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/focus_button_container"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_gravity="bottom"
            android:textSize="13sp"
            android:id="@+id/focus_small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:text="@string/connect"
            android:maxEms="12"
            style="@style/FocusNotifySampleSmallTitleStyleV2"
            android:textColor="@color/titleColor"/>

        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/focus_text_container"
                android:background="@drawable/focus_text_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/text_icon"
                        android:visibility="gone"
                        android:layout_width="@dimen/focus_notify_function_icon_size"
                        android:layout_height="@dimen/focus_notify_function_icon_size"
                        android:layout_marginStart="@dimen/focus_notify_text_margin_horizontal" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/focus_text_title"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="5"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginVertical="3dp"
                        style="@style/FocusNotifySpecialTextStyleV2" />

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
